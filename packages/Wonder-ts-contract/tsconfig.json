{
	"compilerOptions": {
		"target": "ES6",
		"module": "ES6",
		"jsx": "react",
		"lib": [
			"DOM",
			"ESNext",
		],
		"moduleResolution": "node",
		"sourceMap": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"types": [
			"jest"
		],
		"strictNullChecks": true,
		"noImplicitAny": true,
		"noEmit": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true
	},
	"include": [
		"./src",
		"./test"
	]
}